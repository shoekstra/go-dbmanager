{
    "databases": [
        {
            "name": "testdb1",
            "owner": "testowner",
            "default_privileges": [
                { "role": "testowner", "schema": "public", "grant": ["ALL"], "on": "tables", "to": "testuser" },
                { "role": "testowner", "schema": "public", "grant": ["USAGE", "SELECT"], "on": "SEQUENCES", "to": "testuser" }
            ],
            "additional_flags": ["recreate"]
        },
        {
            "name": "testdb2",
            "owner": "testowner",
            "default_privileges": [
                { "role": "testowner", "schema": "public", "grant": ["ALL"], "on": "tables", "to": "testuser" },
                { "role": "testowner", "schema": "public", "grant": ["USAGE", "SELECT"], "on": "SEQUENCES", "to": "testuser" }
            ]
        }
    ],
    "users": [
        {
            "name": "testowner",
            "roles": ["postgres"]
        },
        {
            "name": "testuser",
            "password": "testpassword",
            "grants": [
                { "parameter": "session_replication_role", "privileges": ["SET"] },
                { "database": "testdb1", "privileges": ["ALL"] },
                { "database": "testdb1", "privileges": ["USAGE", "SELECT"], "schema": "public", "sequence": "*" },
                { "database": "testdb1", "privileges": ["ALL"], "schema": "public", "table": "*" }
            ]
        }
    ]
